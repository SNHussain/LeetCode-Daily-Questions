class Solution {
public:
    int possibleStringCount(string word) {
        int n=word.length();

        int possiblity = 0 ;
        int extraPossiblity = 1;

        for(int i=1 ; i<n ; i++){
            if(word[i] == word[i - 1]){
                possiblity++;
            }
        }

        return possiblity + extraPossiblity;
    }
};
